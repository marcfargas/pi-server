  },
  "dependencies": {
    "@pi-server/protocol": "*",
    "ws": "^8.18.0",
    "ink": "^5.1.0",
    "react": "^18.3.0"
  },
  "devDependencies": {
    "@types/ws": "^8.5.0",
    "@types/react": "^18.3.0",
    "typescript": "^5.7.0",
    "vitest": "^3.0.0"
  }
}
