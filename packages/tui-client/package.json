{
  "name": "@pi-server/tui-client",
  "version": "0.1.0",
  "description": "Terminal TUI client for pi-server (Ink/React)",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "pi-client": "dist/cli.js"
  },
  "exports": {
